<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout4"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".detailFragment">
    <View
        android:id="@+id/view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/purple_500"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/TVNombreDelProducto"
        />
    <Button
        android:id="@+id/goBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/back"
        android:drawableTint="@color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"

        />
    <TextView
        android:id="@+id/TVNombreDelProducto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nombre del producto"
        android:textColor="@color/black"
        android:textSize="40dp"
        app:layout_constraintTop_toBottomOf="@id/goBack"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginVertical="10dp"
        android:layout_marginHorizontal="10dp"
        />

    <ImageView
        android:id="@+id/IVImagenDelProducto"
        android:layout_width="0dp"
        android:layout_height="450dp"
        android:background="@color/black"
        app:layout_constraintTop_toBottomOf="@id/TVNombreDelProducto"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />
    <TextView
        android:id="@+id/TVSignoProducto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$"
        android:textColor="@color/green"
        android:textSize="25dp"
        app:layout_constraintTop_toBottomOf="@id/IVImagenDelProducto"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="30dp"
        />
    <TextView
        android:id="@+id/TVPrecioDelProducto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="200"
        android:textColor="@color/green"
        android:textSize="25dp"
        app:layout_constraintTop_toBottomOf="@id/IVImagenDelProducto"
        app:layout_constraintLeft_toRightOf="@id/TVSignoProducto"
        />

    <TextView
        android:id="@+id/TVDetalles"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="detalles"
        android:textColor="@color/black"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@id/TVPrecioDelProducto"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_margin="15dp"
        />
    <Button
        android:id="@+id/BTNAgregarAlCarrito"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="agregar al carrito"
        android:backgroundTint="@color/green"
        app:layout_constraintTop_toBottomOf="@id/TVDetalles"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="55dp"
        />




</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>